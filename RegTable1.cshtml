@model List<Network.Models.UserModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewData["Title"] - Network</title>*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>



</head>
<body>

    <nav class="navbar navbar-expand navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 navbar-fixed-top margin-left:14 ">
        <div class="container">
            @*<a class="navbar-brand" asp-area="" asp-controller="Network" asp-action="Index">Network</a>*@
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between col-12">
                <ul class="navbar-nav flex-grow-1" style="margin-left:-60px;">
                    <li class="nav-item text-dark text-white">
                        <a class="btn btn-danger" style="margin-left: -51px;">DashBoard:-</a>

                    </li>
                    <li class="nav-item text-white text-left">
                        <a class="btn btn-primary">@ViewBag.Name</a>

                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-collapse">
                    <li class="text-white">
                        <h4>Show All User Table</h4>

                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right" style="margin-right:-100px;">
                    <li><a asp-controller="Network" asp-action="Logout" class="btn btn-danger">Logout</a></li>

                </ul>
            </div>
        </div>
    </nav>

    <div>
        Users:<input id="search"/>
        <button onclick="search()">search</button>
    </div>


    <table class="table table">
        <thead class="table-dark">
            <tr>

                <th><small>Id</small></th>
                <th><small>Name</small></th>
                <th><small>UserName</small></th>
                <th><small>EmailId</small></th>
                <th><small>Password</small></th>
                <th><small>AddharNo</small></th>
                <th><small>CreateRefer</small></th>
                <th><small>Phone_No</small></th>
                <th><small>Gender</small></th>
                <th><small>Amount</small></th>
                <th><small>AdminReferCode</small></th>
                <th><small>Country</small></th>
                <th><small>State</small></th>
                <th><small>City</small></th>
                <th><small>Title</small></th>
                <th><small>ImageData</small></th>


            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>

                <td><small>@item.Id </small></td>
                <td><small>@item.Name </small></td>
                <td><small>@item.UserName </small></td>
                <td><small>@item.EmailId </small></td>
                <td><small>@item.Password </small></td>
                <td><small>@item.AddharNo </small></td>
                <td><small>@item.CreateRefer </small></td>
                <td><small>@item.PhoneNo </small></td>
                <td><small>@item.Gender </small></td>
                <td><small>@item.Amount </small></td>
                <td><small>@item.AdminReferCode </small></td>
                <td><small>@item.Country </small></td>
                <td><small>@item.State </small></td>
                <td><small>@item.City </small></td>
                <td><small>@item.Title </small></td>
                <td><small><img src="~/@item.FilePath" height="50px;" width="50px" class="rounded-circle " /></small></td>
                @*<td><small><a asp-controller="Network" asp-action="Edit" asp-route-id="@item.Id">Edit</a></small></td>*@

            </tr>
        }

    </table>

    <div class="container">
        <main role="main" class="pb-3">
            @*@RenderBody()*@
        </main>
    </div>
    <script>
        function search() {
            $("tr").each(function (index, value) {
                if (index > 0 && !$(this).find("td")[0].innerText.includes($("#search").val())) {
                    $(this).attr("hidden", true);
                } else {
                    $(this).removeAttr("hidden");
                }
                console.log(value);
            })
        }
    </script>
